<h1>Arman's Blog</h1>
<%= link_to 'My Blog', controller: 'articles' %>

<h1>Recent Posts</h1>

<%= link_to 'New Article', new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show', article_path(article) %></td>

		</tr>
	<% end %>
</table>


